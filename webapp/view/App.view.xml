<mvc:View
    controllerName="ui5.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
    displayBlock="true">
    
    <App>
        <pages>
            <Page 
                title="{i18n>homePageTitle}">
                <content>
                    <mvc:XMLView viewName="ui5.walkthrough.view.HalloPanel"/>
                    <mvc:XMLView viewName="ui5.walkthrough.view.NamePanel"/>
                    <Button
                        id="helloDialogButton"
                        text="{i18n>openDialogButtonText}"
                        press=".onOpenDialog"
                        class="sapUiResponsiveMargin"/>
                    
                    <mvc:XMLView viewName="ui5.walkthrough.view.ListePanel"/>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>