<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="NameDialog"
        title="Dein Name ">
        <content>
            <core:Icon
                src="sap-icon://biometric-face"
                size="3rem"
                height="0%"
                class="sapUiMediumMargin"/>
            <FormattedText 
                htmlText="Dein Name lautet {/recipient/name}"
                class="sapUiSmallMargin sapThemeBaseBG" />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>